{
  "name": "foundry-desktop",
  "version": "0.1.0",
  "description": "Foundry subtemplate for Electron/Tauri desktop apps (ClipForge base)",
  "main": "main/main.js",
  "type": "module",
  "scripts": {
    "start": "electron-forge start",
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electronmon .\"",
    "make": "electron-forge make",
    "pack:mac": "electron-forge make --platform=darwin --arch=arm64,x64",
    "pack:win": "electron-forge make --platform=win32 --arch=x64",
    "package": "electron-forge package"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electronmon": "^2.0.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.0"
  },
  "foundryTemplate": {
    "type": "desktop",
    "inheritsFrom": "core",
    "features": [
      "electron",
      "ffmpeg",
      "timeline-ui"
    ]
  }
}